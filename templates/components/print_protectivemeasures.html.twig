{% set currentParentIndex = 2 %}
{% set currentIndex = 2 %}

<h4 style="background-color: #d0cece; border-radius: 2px; color: black; padding: 8px;font-size: 16px; width: 100%; text-align: start;">
    {{ __("General security measures", 'dlteams') }}
</h4>

<table width="100%" border="1" cellpadding="3" cellspacing="0">
    <thead>
    <tr>
        <th>
            <h5 style="padding:0px!important;margin:0px!important"> {{ __("Name", 'dlteams') }}</h5>
        </th>
        <th><h5 style="padding:0px!important;margin:0px!important"> {{ __("Content", 'dlteams') }}</h5>
        </th>
        <th>
            <h5 style="padding:0px!important;margin:0px!important"> {{ __("Type", 'dlteams') }}</h5>
        </th>
        <th><h5 style="padding:0px!important;margin:0px!important"> {{ __("Comment") }}</h5>
        </th>
    </tr>
    </thead>

    <tbody>
    {% for item in psm_data.protective_measures %}
        <tr style="border: solid 1px gray; color: black" width="100%">
            <td> {{ item.name }} </td>
            <td> {{ item.content }} </td>
            <td> {{ item.typename }} </td>
            <td> {{ item.comment }} </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<br/>
<br/>
