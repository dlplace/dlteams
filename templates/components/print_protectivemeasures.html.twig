{% set currentParentIndex = 1 %}
{% set currentIndex = 1 %}
{% set keyIndex = key %}


<h4 style="background-color: #d0cece; border-radius: 2px; color: black; padding: 8px;font-size: 16px; width: 100%; text-align: start;">
    {{ __("Data security and confidentiality PDF", 'dlteams') }}
</h4>

<table width="100%" border="1" cellpadding="3" cellspacing="0">

    {% for item in psm_data.sensibilite_impact_violation %}
        <tr style="border: solid 1px gray; color: black" width="100%">
            <td width="33%" style="background:#d0cece;color:black"> {{ item.section }} </td>
            <td width="50%"> {{ item.value | raw }} </td>
        </tr>
    {% endfor %}

</table>
<br/>
<br/>

