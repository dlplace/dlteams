{% set currentParentIndex = 7 %}
{% set currentIndex = 7 %}
{% set keyIndex = key %}
<h4 style="background-color: #d0cece; border-radius: 2px; color: black; padding: 8px;font-size: 16px; width: 100%; text-align: start;">
    {{ __('Legal basis PDF', 'dlteams') }}
</h4>
{% if prlb_data.prlb_rows|length == 0 %}
    {{ __('No legal basis act(s).', 'dlteams') }}
{% else %}
    <table width="100%" border="1" cellpadding="3" cellspacing="0">
        <thead>
        <tr>
            <th><h5 style="padding:0px!important;margin:0px!important"> {{ __('Type', 'dlteams') }}</h5>
            </th>
            <th><h5 style="padding:0px!important;margin:0px!important"> {{ __('Name', 'dlteams') }}</h5>
            </th>
            {# <th><h5 style="padding:0px!important;margin:0px!important"> {{ __('Introduced in', 'dlteams') }}</h5></th> #}
            <th>
                <h5 style="padding:0px!important;margin:0px!important"> {{ __('Content', 'dlteams') }}</h5>
            </th>
            <th>
                <h5 style="padding:0px!important;margin:0px!important"> {{ __('Commentaire', 'dlteams') }}</h5>
            </th>
        </tr>
        </thead>

        <tbody>
        {% for item in prlb_data.prlb_rows %}
            <tr style="border: solid 1px gray; color: black" width="100%">
                <td> {{ item.type }} </td>
                <td> {{ item.name }} </td>
                {# <td> {{ item.value}} </td> #}
                <td> {{ item.content | raw }} </td>
                <td> {{ item.comment }} </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endif %}
<br/>
